{
  "manifest_version": 2,
  "name": "FreshRSS-Notify",
  "version": "1.0",
  "default_locale": "en",

  "permissions": [
    "storage",
    "alarms"
  ],

  "background": {
    "scripts": [
      "node_modules/i18next/dist/umd/i18next.js",
      "node_modules/webextension-polyfill/dist/browser-polyfill.js",
      "src/constants.js",
      "src/back/lib/EventsManager.js",
      "src/back/lib/fetch.js",
      "src/back/lib/functions.js",
      "src/back/main.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "16": "Assets/icon.png",
      "32": "Assets/icon.png"
    },
    "default_title": "FreshRSS Notify",
    "default_popup": "src/front/panel/index.html"
  },

  "options_ui": {
    "page": "src/front/options/index.html",
    "open_in_tab": true
  },

  "applications": {
    "gecko": {
      "id": "freshrss@notify"
    }
  }
}