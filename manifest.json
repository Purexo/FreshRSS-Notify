{
  "manifest_version": 2,
  "name": "FreshRSS-Notify",
  "version": "3.0.3",
  "default_locale": "en",
  "author": "Purexo",
  "homepage_url": "https://github.com/Purexo/FreshRSS-Notify",

  "icons": {
    "64": "Assets/img/icon.png"
  },

  "permissions": [
    "<all_urls>",
    "storage",
    "alarms",
    "notifications"
  ],

  "background": {
    "page": "src/back/index.html"
  },

  "browser_action": {
    "default_icon": "Assets/img/icon.png",
    "default_title": "FreshRSS Notify",
    "default_popup": "src/front/panel/index.html",
    "browser_style": false
  },

  "options_ui": {
    "page": "src/front/options/index.html",
    "open_in_tab": true
  },

  "applications": {
    "gecko": {

    }
  }
}