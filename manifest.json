{
  "manifest_version": 2,
  "name": "FreshRSS-Notify",
  "version": "1.0",

  "options_ui": {
    "page": "options/index.html"
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": [
      "background/CONSTANTS.js",
      "background/lib/adapter.js",
      "background/lib/EventsManager.js",
      "background/lib/fetch.js",
      "background/main.js"
    ]
  },

  "applications": {
    "gecko": {
      "id": "freshrss@notify"
    }
  }
}