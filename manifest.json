{
  "manifest_version": 2,
  "name": "FreshRSS-Notify",
  "version": "1.0",

  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "scripts": [
      "CONSTANTS/runtime.js",
      "background/lib/adapter.js",
      "globals/js/EventsManager.js",
      "background/lib/fetch.js",
      "background/main.js"
    ]
  },

  "applications": {
    "gecko": {
      "id": "freshrss@notify"
    }
  }
}