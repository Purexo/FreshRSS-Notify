{
  "manifest_version": 2,
  "name": "FreshRSS-Notify",
  "version": "1.0",
  "default_locale": "en",

  "permissions": [
    "<all_urls>",
    "storage",
    "alarms",
    "notifications"
  ],

  "background": {
    "scripts": [
      "src/back/lib/from_npm/i18next.js",
      "src/back/lib/from_npm/browser-polyfill.js",

      "src/constants.js",

      "src/back/lib/EventsManager.js",
      "src/back/lib/fetch.js",
      "src/back/lib/functions.js",
      "src/back/lib/RssApi.class.js",
      "src/back/lib/Notification.class.js",

      "src/back/main.js"
    ]
  },

  "browser_action": {
    "default_icon": {
      "16": "Assets/img/icon.png",
      "32": "Assets/img/icon.png"
    },
    "default_title": "FreshRSS Notify",
    "default_popup": "src/front/panel/index.html"
  },

  "options_ui": {
    "page": "src/front/options/index.html",
    "open_in_tab": true
  },

  "applications": {
    "gecko": {
      "id": "freshrss-notify@purexo.mom"
    }
  }
}