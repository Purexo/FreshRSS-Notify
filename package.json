{
  "title": "FreshRSS-Notify",
  "name": "freshrss-notify",
  "version": "2.0.1",
  "description": "A FreshRSS Notifier for smart people \n don't forget to activate the api on your FreshRSS server",
  "main": "index.js",
  "author": "Purexo",
  "homepage": "https://github.com/purexo/FreshRSS-Notify",
  "engines": {
    "firefox": ">=38.0a1",
    "fennec": ">=38.0a1"
  },
  "preferences": [
      {
          "name": "url",
          "type": "string",
          "value": "http://example.com/FreshRSS",
          "title": "URL :",
          "description": "l'adresse de l'instance de FreshRSS utilisé"
      },
      {
          "name": "api",
          "type": "string",
          "value": "p/api/greader.php",
          "title": "URL API :",
          "description": "Relative path of api, you've probably nothing to change"
      },
      {
          "name": "login",
          "type": "string",
          "value": "Login",
          "title": "Login :"
      },
      {
          "name": "password",
          "type": "string",
          "value": "password",
          "title": "Password API:",
          "description": "Password de votre compte pour l'api"
      },
      {
          "name": "delay",
          "type": "integer",
          "value": 15,
          "title": "delay d'actualisation automatique :",
          "description": "exprimé en minutes"
      },
      {
        "name": "lang",
        "type": "menulist",
        "value": "en-US",
        "title": "Choose your language",
        "description": "Change on Reboot",
        "options": [
            {
                "value": "en-US",
                "label": "American"
            },
            {
                "value": "fr-FR",
                "label": "Français"
            }
        ],
        "hidden": true
      },
      {
          "name": "badgeNoError",
          "type": "string",
          "value": "green",
          "title": "Color 0 unread : ",
          "hidden": true
      },
      {
          "name": "badgeError",
          "type": "string",
          "value": "red",
          "title": "Color many unread : ",
          "hidden": true
      }
  ],
  "license": "GPL 3"
}
